<%- include('../partials/header') %>

<section class="mb-4">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body text-center py-5">
            <div class="text-success mb-3">
              <i class="fas fa-check-circle" style="font-size: 4rem;"></i>
            </div>
            <h2 class="card-title">Payment Successful!</h2>
            <p class="card-text">Thank you for your purchase. Your order has been confirmed.</p>
            <p class="text-muted">You will receive an email confirmation shortly.</p>
            
            <% if (session) { %>
              <div class="mt-4">
                <p><strong>Order ID:</strong> <%= session.id %></p>
                <p><strong>Amount:</strong> $<%= (session.amount_total / 100).toFixed(2) %></p>
              </div>
            <% } %>
            
            <div class="mt-4">
              <a href="/account" class="btn btn-primary me-2">View Orders</a>
              <a href="/products" class="btn btn-outline-secondary">Continue Shopping</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>